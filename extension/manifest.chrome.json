{
	"manifest_version": 3,

	"name": "Mindctrl",
	"version": "0.0.2",
	"description": "Mind control the browser to do anything at the master's bidding",

	"icons": {
		"48": "icons/icon-normal.png"
	},

	"permissions": [
		"activeTab",
		"downloads",
		"history",
		"scripting",
		"storage",
		"tabs"
	],

	"host_permissions": [
		"<all_urls>"
	],

	"action": {
		"default_title": "Mindctrl",

		"default_icon": {
			"48": "icons/icon-normal.png"
		}
	},

	"background": {
		"service_worker": "background.js"
	},

	"options_ui": {
		"page": "options.html"
	}
}
